@model CarrierShop.Models.Service

@{
    ViewData["Title"] = "Edit";
}

<h1>Промяна</h1>

<h4>Услуги</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerKg" class="control-label"></label>
                <input asp-for="PricePerKg" class="form-control" />
                <span asp-validation-for="PricePerKg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerKm" class="control-label"></label>
                <input asp-for="PricePerKm" class="form-control" />
                <span asp-validation-for="PricePerKm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxKg" class="control-label"></label>
                <input asp-for="MaxKg" class="form-control" />
                <span asp-validation-for="MaxKg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Обратно</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
