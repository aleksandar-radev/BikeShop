@model IEnumerable<CarrierShop.Models.Service>

@{
    ViewData["Title"] = "Index";
}

<h1>Услуги</h1>

<p>
    <a asp-action="Create">Създай</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerKg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerKm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxKg)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerKg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerKm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxKg)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Промяна</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детайли</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Изтриване</a>
            </td>
        </tr>
}
    </tbody>
</table>
